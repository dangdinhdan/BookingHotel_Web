<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - 4anhemdatai</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/client/css01/style.css" />

    <script src="~/Scripts/No1JavaScript/script01.js" defer></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("styles", required: false)
</head>
<body id="top" style="overflow-x:hidden">

    <header>
        <div class="container topbar">
            <div class="header-left">
                <div class="brand">
                    <div class="logo">36</div>
                    <div>
                        <div class="brand-name">4anhemdatai</div>
                        <div class="brand-sub">Phòng nghỉ — Dịch vụ tận tâm</div>
                    </div>
                </div>
            </div>
            <div class=" header-center">
                <nav>
                    <a href="/#top">Trang chủ</a>
                    <a href="/#rooms">Phòng</a>
                    <a href="/#about">Giới thiệu</a>
                    <a href="/#contact">Liên hệ</a>
                </nav>
            </div>

            <div class=" header-right">

                @* --- PHẦN LOGIC ĐĂNG NHẬP MỚI --- *@
                @{
                    // Lấy thông tin từ Session (đã sửa đổi ở Controller)
                    var userEmail = Session["UserEmail"] as string;
                    var displayName = Session["DisplayName"] as string;

                    // Logic hiển thị: Nếu có Tên thì hiện Tên, nếu không thì hiện Email
                    var labelName = !string.IsNullOrEmpty(displayName) ? displayName : userEmail;
                }

                <div class="auth" id="user-menu-container">
                    @if (!string.IsNullOrEmpty(userEmail)) // Kiểm tra đã đăng nhập chưa (dựa vào Email)
                    {
                        // --- TRẠNG THÁI ĐÃ ĐĂNG NHẬP ---
                        <button id="user-menu-button"
                                type="button"
                                class="user-avatar-button"
                                aria-expanded="false"
                                aria-haspopup="true">

                            <span class="avatar-circle">
                                @(labelName.Substring(0, 1).ToUpper())
                            </span>
                            <span class="hidden-xs">@labelName</span>

                        </button>

                        <div id="user-menu"
                             class="dropdown-menu"
                             role="menu"
                             aria-orientation="vertical"
                             aria-labelledby="user-menu-button">

                            <h6 class="dropdown-header">
                                Xin chào, @labelName
                                <small style="display:block; font-weight:normal; color:#888; font-size:12px; margin-top: 2px;">
                                    @userEmail
                                </small>
                            </h6>

                            <div class="dropdown-divider"></div>

                            <a href="/TaiKhoan/Profile" class="dropdown-item" role="menuitem">
                                Hồ sơ cá nhân
                            </a>

                            <a href="/TaiKhoan/TransactionHistory" class="dropdown-item" role="menuitem">
                                Lịch sử giao dịch
                            </a>

                            <a href="/TaiKhoan/Favourite" class="dropdown-item" role="menuitem">
                                Đã lưu
                            </a>

                            <div class="dropdown-divider"></div>

                            <a href="/TaiKhoan/Logout" class="dropdown-item" style="color: #dc3545;" role="menuitem">
                                Đăng xuất
                            </a>
                        </div>
                    }
                    else
                    {
                        // --- TRẠNG THÁI CHƯA ĐĂNG NHẬP ---
                        <a href="/TaiKhoan/Login" class="btn btn-ghost">Đăng nhập</a>
                        <a href="/TaiKhoan/Register" class="btn btn-primary">Đăng ký</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <main>
        <div>
            @if (TempData["DeleteSuccess"] != null)
            {
                <div class="alert alert-success" style="padding: 15px; background: #d4edda; color: #155724; margin-bottom: 20px; border-radius: 4px;">
                    @TempData["DeleteSuccess"]
                </div>
            }
        </div>
        @RenderBody()
    </main>

    <footer id="contact" class="section">
        <div class="footer-wrap">
            <div>
                <div class="brand-name">4anhemdatai</div>
                <div class="muted">© <span id="year"></span> 4anhemdatai</div>
            </div>
            <div class="muted footer-links">
                <div>Chính sách |</div>
                <div>FAQ |</div>
                <div>Liên hệ</div>
            </div>
        </div>
    </footer>

    <div id="modalRoot" aria-hidden="true"></div>

    @* Script xử lý đóng/mở menu User (Giữ nguyên) *@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const button = document.getElementById('user-menu-button');
            const menu = document.getElementById('user-menu');
            const container = document.getElementById('user-menu-container');

            // Cập nhật năm tự động ở footer
            const yearSpan = document.getElementById('year');
            if (yearSpan) yearSpan.textContent = new Date().getFullYear();

            if (button && menu) {
                button.addEventListener('click', function (event) {
                    event.stopPropagation();
                    menu.classList.toggle('show');
                    const isExpanded = menu.classList.contains('show');
                    button.setAttribute('aria-expanded', isExpanded);
                });

                document.addEventListener('click', function (event) {
                    if (container && !container.contains(event.target)) {
                        if (menu.classList.contains('show')) {
                            menu.classList.remove('show');
                            button.setAttribute('aria-expanded', 'false');
                        }
                    }
                });
            }
        });
    </script>

</body>
</html>