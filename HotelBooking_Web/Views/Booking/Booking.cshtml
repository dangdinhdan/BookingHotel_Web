
@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="booking-page" style="display:flex; gap:24px; margin-top:30px; flex-wrap:wrap;">

    <!-- LEFT FORM -->
    <div class="booking-left" style="flex:1; min-width:360px;">

        <!-- Liên hệ đặt chỗ -->
        <div class="booking-box">
            <h2 class="booking-title">Liên hệ đặt chỗ</h2>

            <div class="form-group">
                <label>Họ tên *</label>
                <input type="text" class="input" placeholder="Như trên CMND (không dấu)" />
            </div>

            <div class="form-group">
                <label>Điện thoại di động *</label>
                <div style="display:flex; gap:8px;">
                    <select class="input" style="max-width:110px;">
                        <option>+84</option>
                    </select>
                    <input type="text" class="input" placeholder="Ví dụ: 0912345678" />
                </div>
            </div>

            <div class="form-group">
                <label>Email *</label>
                <input type="email" class="input" placeholder="email@example.com" />
            </div>

            <label style="display:flex; align-items:center; gap:8px; margin-top:6px;">
                <input type="checkbox" />
                Tôi đặt chỗ cho chính mình
            </label>
        </div>

        <!-- Thông tin khách hàng -->
        <div class="booking-box">
            <h2 class="booking-title">Thông tin Khách hàng</h2>

            <div class="form-group">
                <label>Họ tên *</label>
                <input type="text" class="input" placeholder="Tên + Họ" />
            </div>
        </div>

        <!-- Yêu cầu đặc biệt -->
        <div class="booking-box">
            <h2 class="booking-title">Yêu cầu đặc biệt</h2>

            <label class="checkbox"><input type="checkbox" /> Phòng không hút thuốc</label>
            <label class="checkbox"><input type="checkbox" /> Phòng liên thông</label>
            <label class="checkbox"><input type="checkbox" /> Tầng thấp</label>
        </div>

    </div>

    <!-- RIGHT SUMMARY -->
    <div class="booking-right" style="width:360px; min-width:300px;">
        <div class="summary-box">

            <h3 style="font-size:18px; font-weight:700; margin-bottom:8px;">
                Deluxe Triple With City View (Room Only)
            </h3>

            <div class="muted" style="font-size:14px; margin-bottom:14px;">3 khách · 1 phòng</div>

            <div class="summary-section">
                <div class="summary-row">
                    <div>Nhận phòng</div>
                    <div>Thứ Sáu, 21/11/2025</div>
                </div>
                <div class="summary-row">
                    <div>Trả phòng</div>
                    <div>Thứ Bảy, 22/11/2025</div>
                </div>
            </div>

            <div class="summary-section">
                <div class="summary-title">Chi tiết giá</div>

                <div class="summary-row">
                    <div>Giá phòng</div>
                    <div>393.939 VND</div>
                </div>
                <div class="summary-row">
                    <div>Thuế & phí</div>
                    <div>61.061 VND</div>
                </div>

                <div class="summary-total">
                    <div>Tổng cộng</div>
                    <div class="total-price">455.000 VND</div>
                </div>
            </div>

            <button class="btn-primary" style="width:100%; padding:14px; margin-top:12px;">
                Tiếp tục
            </button>
        </div>
    </div>
</div>


