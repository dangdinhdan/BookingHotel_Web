@{
    ViewBag.Title = "Chi tiết phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="roomDetail" class="section">

    <div class="room-detail">

        <div class="room-detail-left">
            <img src="/Content/images/sample-room.jpg" alt="Phòng" class="room-detail-img" />
        </div>

        <div class="room-detail-right">
            <h1 class="room-title">Phòng 203</h1>
            <div class="room-type">Deluxe — View thành phố</div>

            <div class="room-price">
                650.000 <span>VNĐ / đêm</span>
            </div>

            <div class="room-info-grid">
                <div class="info-row">
                    <span class="label">Sức chứa:</span>
                    <span class="value">3 người</span>
                </div>

                <div class="info-row">
                    <span class="label">Trạng thái:</span>
                    <span class="value available">Còn trống</span>
                </div>
            </div>

            <div class="room-description">
                <h3>Mô tả</h3>
                <p>
                    Phòng rộng rãi, có cửa sổ lớn nhìn ra thành phố. Trang bị đầy đủ tiện nghi:
                    máy lạnh, TV, bàn làm việc, wifi miễn phí.
                </p>
            </div>

            <div class="room-buttons">
                <a class="btn-primary" href="#">Đặt ngay</a>
                <a class="btn-secondary" href="/Phong/Index">Quay lại</a>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <script src="~/Scripts/No1JavaScript/room.js"></script>
}
