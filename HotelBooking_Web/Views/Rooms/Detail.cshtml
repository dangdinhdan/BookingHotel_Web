@model HotelBooking_Web.Models.DatPhongViewModel

@{
    ViewBag.Title = "Chi tiết phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="currentRoomId" value="@Model.PhongID" />

<div class="container" style="margin-top: 40px; margin-bottom: 50px;">
    <section id="roomDetail" class="section">

        <div class="room-detail">

            <div class="room-gallery">
                <div class="slide-container">
                    <div id="slider-wrapper"></div>
                    <a class="prev" onclick="plusSlides(-1)">❮</a>
                    <a class="next" onclick="plusSlides(1)">❯</a>
                </div>
            </div>

            <div class="room-info">
                <h1 class="room-title" id="lblTenPhong">Đang tải dữ liệu...</h1>

                <div class="room-price">
                    <span id="lblGia">0</span> đ <span>/ đêm</span>
                </div>

                <div class="room-info-grid">
                    <div class="info-row">
                        <span class="label">Loại phòng:</span>
                        <span class="value" id="lblLoaiPhong">...</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Trạng thái:</span>
                        <span class="available" id="lblTrangThai">Trống</span>
                    </div>
                </div>

                <div class="room-description" style="border-top: 1px solid #eee; padding-top: 15px;">
                    <h3 style="font-size: 16px; margin-bottom: 8px;">Mô tả chi tiết:</h3>
                    <div id="lblMoTa" style="color: var(--secondary); line-height: 1.6;"></div>
                </div>

                <div class="room-buttons">
                    <form action="~/Booking/Index" method="post">
                        <input type="hidden" name="PhongID" value="@Model.PhongID" />
                        <input type="hidden" name="CheckIn" value="@Model.CheckIn.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="CheckOut" value="@Model.CheckOut.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="SoNguoi" value="@Model.SoNguoi" />

                        <button type="submit" class="btn btn-success btn-book" style="width: 100%; padding: 12px; font-size: 16px; cursor: pointer;" >
                            Đặt phòng
                        </button>
                    </form>
                    
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/No1JavaScript/Detail.js"></script>
    
}
