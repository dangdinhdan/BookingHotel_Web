@{
    ViewData["Title"] = "Trang chủ";
}

<main></main>
    <!-- HERO -->
<section class="hero">
    <div class="slider-background">
        <div class="slider-track" id="sliderTrack">
            <!-- Thứ tự: 1 -> 2 -> 3 -> 1-->
            <div class="slide slide-1"></div>
            <div class="slide slide-2"></div>
            <div class="slide slide-3"></div>
            <div class="slide slide-1"></div>
        </div>
    </div>

    <div class="hero-fixed-content">
        <div class="hotel-title">Khách sạn 4anhemdatai</div>
        <div class="hotel-sub">
            Trải nghiệm nghỉ dưỡng thoải mái bên bờ biển — phòng tiện nghi, dịch vụ chu đáo.
        </div>
    </div>

    <div class="hero-inner-container">

        <form action="@Url.Action("SearchRooms", "Rooms")" method="get" class="search-card">

            <div class="form-control" style="flex:1; padding-right: 20px ">
                <label class="label">Ngày nhận / trả</label>
                <div style="gap:8px; display:flex;">
                    <input type="date" id="checkin" name="checkin" required
                           value="@DateTime.Now.ToString("yyyy-MM-dd")"
                           style="border: 1px solid #ccc; border-radius: 10px; padding: 8px;">

                    <input type="date" id="checkout" name="checkout" required
                           value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")"
                           style="border: 1px solid #ccc; border-radius: 10px; padding: 8px;">
                </div>
            </div>

            <div class="form-control" style="width:140px">
                <label class="label">Khách</label>
                <select id="guests" name="guests" style="display:flex; gap:8px">
                    <option value="1" selected>1 khách</option>
                    <option value="2">2 khách</option>
                    <option value="3">3 khách</option>
                    <option value="4">4 khách</option>
                </select>
            </div>

            <div class="view-all-room" style="display:flex; align-items: flex-end;">
                <button type="submit" class="btn-view-all" style="border:none; height: 100%; cursor: pointer;">
                    Tìm phòng
                </button>
            </div>
        </form>
    </div>
</section>

    <!-- ABOUT -->
    <section id="about" class="section">
        <div class="about-wrap">
            <div>
                <h3>Về khách sạn</h3>
                <p class="muted">Khách sạn 55giaiphong nằm ngay mặt biển, tiện di chuyển, phòng sạch sẽ, phục vụ chu đáo. Phù hợp cho cả chuyến công tác và nghỉ dưỡng gia đình.</p>
            </div>
            <div class="about-box">
                <div class="info-title">Địa chỉ</div>
                <div class="muted">123 Đường Biển, Thành phố X</div>
                <div style="height:8px"></div>
                <div class="info-title">Liên hệ</div>
                <div class="muted">+84 123 456 789</div>
            </div>
        </div>
    </section>
