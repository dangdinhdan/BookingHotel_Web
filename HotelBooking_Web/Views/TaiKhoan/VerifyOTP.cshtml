@{
    ViewBag.Title = "Xác nhận OTP";
}

<div class="container">
    <div class="auth-box">
        <h2 class="auth-title">Đặt lại mật khẩu</h2>
        <p style="text-align:center; color:#666; font-size:14px; margin-bottom:20px;">
            Mã OTP đã được gửi tới <b>@ViewBag.Email</b>.<br>Vui lòng kiểm tra (cả mục Spam).
        </p>

        <form method="post" action="/TaiKhoan/VerifyOtp">
            @Html.AntiForgeryToken()

            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div class="form-group">
                <label for="otp">Mã OTP (6 số)</label>
                <input type="text" id="otp" name="otp" class="form-input" placeholder="Nhập mã xác nhận" required autocomplete="off" />
            </div>

            <div class="form-group">
                <label for="newPassword">Mật khẩu mới</label>
                <input type="password" id="newPassword" name="newPassword" class="form-input" placeholder="Nhập mật khẩu mới" required />
            </div>

            <div class="form-group">
                <label for="confirmPassword">Xác nhận mật khẩu</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" placeholder="Nhập lại mật khẩu mới" required />
            </div>

            <button type="submit" class="btn-submit">Đổi mật khẩu</button>

            @if (ViewBag.Error != null)
            {
                <div class="alert-error">@ViewBag.Error</div>
            }
        </form>
    </div>
</div>