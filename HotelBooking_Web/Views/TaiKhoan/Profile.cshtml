@{
    ViewBag.Title = "Hồ sơ cá nhân";

    // --- KHAI BÁO BIẾN Ở ĐÂY ĐỂ DÙNG ĐƯỢC TOÀN TRANG ---
    // Lấy dữ liệu từ Session, nếu null thì dùng giá trị mặc định
    var userEmail = Session["UserEmail"] as string ?? "email@example.com";
    var displayName = Session["DisplayName"] as string ?? "Khách hàng"; // Biến displayName được khai báo tại đây

    var memberSince = "25/11/2025";
    var userPhone = "0901234567";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>

    <div class="container">
        <div class="profile-page">

            <aside class="profile-sidebar">

                <div class="profile-user-header">
                    <div class="profile-avatar">
                        @(displayName.Length > 0 ? displayName.Substring(0, 1) : "U")
                    </div>
                    <div class="profile-user-info">
                        <h3>@displayName</h3>
                        <p>@userEmail</p>
                    </div>
                </div>

                <h3>Quản lý Đặt phòng</h3>
                <ul>
                    <li><a href="/TaiKhoan/BookingList"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" /></svg> Đơn đặt phòng của tôi</a></li>
                    <li><a href="/TaiKhoan/TransactionHistory"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2" /><line x1="16" y1="2" x2="16" y2="6" /><line x1="8" y1="2" x2="8" y2="6" /><line x1="3" y1="10" x2="21" y2="10" /></svg> Lịch sử Giao dịch</a></li>
                    <li><a href="/TaiKhoan/Favourite"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z" /></svg> Đã lưu</a></li>
                </ul>

                <h3>Cài đặt Tài khoản</h3>
                <ul>
                    <li class="active"><a href="/TaiKhoan/Profile"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" /><circle cx="12" cy="7" r="4" /></svg> Hồ sơ cá nhân</a></li>
                    <li><a href="/TaiKhoan/ChangePassword"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2" /><path d="M7 11V7a5 5 0 0 1 10 0v4" /></svg> Đổi mật khẩu</a></li>
                    <li><a href="/TaiKhoan/DeleteAccount"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" vie1wBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6" /><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6" /><path d="M10 11v6" /><path d="M14 11v6" /><path d="M2 2v2h2l3 9v7H6a2 2 0 0 0 0 4h12a2 2 0 0 0 0-4h-1V12z" /></svg> Xóa tài khoản</a></li>
                    <li class="logout"><a href="/TaiKhoan/Logout"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" /><polyline points="10 17 15 12 10 7" /><line x1="15" y1="12" x2="3" y2="12" /></svg> Đăng xuất</a></li>
                </ul>
            </aside>

            <section class="profile-content">
                <h2>@ViewBag.Title</h2>

                <div class="profile-card">
                    <div class="profile-card-header">
                        <h3>Thông tin Chi tiết</h3>
                        <a href="/TaiKhoan/EditProfile" class="btn-ghost">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 5px;"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z" /></svg>
                            Cập nhật Hồ sơ
                        </a>
                    </div>

                    <div class="info-row">
                        <div class="info-group">
                            <div class="info-label">Tài khoản (Email)</div>
                            <div class="info-value">@userEmail</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-group">
                            <div class="info-label">Họ và tên</div>
                            <div class="info-value">@displayName</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-group">
                            <div class="info-label">Số điện thoại</div>
                            <div class="info-value">@userPhone</div>
                        </div>
                    </div>
                </div>

                <div class="profile-card">
                    <div class="profile-card-header">
                        <h3>Bảo mật</h3>
                        <a href="/TaiKhoan/ChangePassword" class="btn-ghost">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 5px;"><rect x="3" y="11" width="18" height="11" rx="2" ry="2" /><path d="M7 11V7a5 5 0 0 1 10 0v4" /></svg>
                            Đổi Mật khẩu
                        </a>
                    </div>

                    <div class="info-row">
                        <div class="info-group">
                            <div class="info-label">Mật khẩu</div>
                            <div class="info-value">••••••••</div>
                        </div>
                        <div class="edit-status">
                            <span>Trạng thái: Đã cập nhật</span>
                        </div>
                    </div>
                </div>

                <div class="profile-card danger-card">
                    <div class="profile-card-header">
                        <div>
                            <h3>Xóa Tài khoản</h3>
                            <p>Thao tác này sẽ xóa vĩnh viễn dữ liệu của bạn và không thể hoàn tác.</p>
                        </div>
                        <a href="/TaiKhoan/DeleteAccount" class="btn-danger">Xóa Tài khoản</a>
                    </div>
                </div>

            </section>
        </div>
    </div>
</body>
</html>