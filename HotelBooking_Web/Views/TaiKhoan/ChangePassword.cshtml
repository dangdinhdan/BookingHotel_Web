@{
    ViewBag.Title = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
    ViewBag.ActivePage = "ChangePassword";
}

<h2>@ViewBag.Title</h2>

<div class="profile-card">
    <div class="profile-card-header" style="border-bottom: none;
padding-bottom: 0;">
        <h3>Thay đổi Mật khẩu Đăng nhập</h3>
    </div>

    @if (TempData["Success"] != null)
    {
        <<div class="cp-message-box success">@TempData["Success"]</div>
    }

<form method="post" action="/TaiKhoan/ChangePassword">
    @Html.AntiForgeryToken()

    <div class="profile-field">
        <label for="OldPassword">Mật khẩu hiện tại</label>
        <input type="password" id="OldPassword" name="OldPassword" class="profile-input" placeholder="Nhập mật khẩu hiện tại" required />
        @Html.ValidationMessage("OldPassword", "", new { @class = "text-danger", style = "color:red; font-size: 13px;" })
    </div>

    <div class="profile-field">
        <label for="NewPassword">Mật khẩu mới</label>
        <input type="password" id="NewPassword" name="NewPassword" class="profile-input" placeholder="Nhập mật khẩu mới (ít nhất 6 ký tự)" required />
        <small>Mật khẩu phải có ít nhất 6 ký tự.</small>
        @Html.ValidationMessage("NewPassword", "", new { @class = "text-danger", style = "color:red; font-size: 13px; display:block;" })
    </div>

    <div class="profile-field">
        <label for="ConfirmPassword">Xác nhận mật khẩu mới</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="profile-input" placeholder="Nhập lại mật khẩu mới" required />
        @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger", style = "color:red; font-size: 13px;" })
    </div>

    <div class="form-actions" style="margin-top: 2rem;">
        <button type="submit" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 5px;"><rect x="3" y="11" width="18" height="11" rx="2" ry="2" /><path d="M7 11V7a5 5 0 0 1 9.9-1" /></svg>
            Đặt lại Mật khẩu
        </button>

        <a href="/TaiKhoan/Profile" class="btn btn-secondary">Hủy bỏ</a>
    </div>
</form>
</div>