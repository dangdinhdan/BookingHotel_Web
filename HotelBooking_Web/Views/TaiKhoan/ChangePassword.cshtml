                <li><a href="/TaiKhoan/DeleteAccount"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" vie1wBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6" /><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6" /><path d="M10 11v6" /><path d="M14 11v6" /><path d="M2 2v2h2l3 9v7H6a2 2 0 0 0 0 4h12a2 2 0 0 0 0-4h-1V12z" /></svg> Xóa tài khoản</a></li>
                <li class="logout"><a href="/TaiKhoan/Logout"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" /><polyline points="10 17 15 12 10 7" /><line x1="15" y1="12" x2="3" y2="12" /></svg> Đăng xuất</a></li>
            </ul>
        </aside>

        <section class="profile-content">
            <h2>@ViewBag.Title</h2>

            <div class="profile-card">
                <div class="profile-card-header" style="border-bottom: none; padding-bottom: 0;">
                    <h3>Thay đổi Mật khẩu Đăng nhập</h3>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert-message alert-message--success">
                        <span class="alert-message__title">Thành công!</span>
                        <span class="alert-message__content">@TempData["Success"]</span>
                    </div>
                }

                <form method="post" action="/TaiKhoan/ChangePassword">

                    <div class="profile-field">
                        <label for="OldPassword">Mật khẩu hiện tại</label>
                        <input type="password" id="OldPassword" name="OldPassword" class="profile-input" placeholder="Nhập mật khẩu hiện tại" required />
                    </div>

                    <div class="profile-field">
                        <label for="NewPassword">Mật khẩu mới</label>
                        <input type="password" id="NewPassword" name="NewPassword" class="profile-input" placeholder="Nhập mật khẩu mới (ít nhất 6 ký tự)" required />
                        <small>Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường và số.</small>
                    </div>

                    <div class="profile-field">
                        <label for="ConfirmPassword">Xác nhận mật khẩu mới</label>
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="profile-input" placeholder="Nhập lại mật khẩu mới" required />
                    </div>

                    <div class="form-actions" style="margin-top: 2rem;">
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 5px;"><rect x="3" y="11" width="18" height="11" rx="2" ry="2" /><path d="M7 11V7a5 5 0 0 1 9.9-1" /></svg>
                            Đặt lại Mật khẩu
                        </button>

                        <a href="/TaiKhoan/Profile" class="btn btn-secondary">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>