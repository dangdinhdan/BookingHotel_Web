@{
    ViewBag.Title = "Đổi Mật Khẩu";
    var tenNguoiDung = "Nguyễn Văn A";
}

<link href="~/css/profile-styles_v4.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" xintegrity="sha512-..." crossorigin="anonymous" />


<div class="container">
    <div class="profile-page">
        <aside class="profile-sidebar">
            <div class="profile-card" style="padding: 15px; margin-bottom: 20px; box-shadow: none; border: none;">
                <div style="display: flex; align-items: center; gap: 10px;">
                    <div style="width: 50px; height: 50px; background: #007bff; color: #fff; font-size: 24px; border-radius: 50%; display: flex; justify-content: center; align-items: center; font-weight: 600; flex-shrink: 0;">
                        @(tenNguoiDung.Substring(0, 1))
                    </div>
                    <div class="info-header">
                        <h3 style="font-size: 18px;">@tenNguoiDung</h3>
                        <p style="font-size: 13px; color: var(--muted);">Thành viên</p>
                    </div>
                </div>
            </div>

            <h3>Quản lý Đặt phòng</h3>
            <ul>
                <li><a href="/TaiKhoan/Bookings"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" /></svg> Đơn đặt phòng</a></li>
                <li><a href="/TaiKhoan/TransactionHistory"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2" /><line x1="16" y1="2" x2="16" y2="6" /><line x1="8" y1="2" x2="8" y2="6" /><line x1="3" y1="10" x2="21" y2="10" /></svg> Lịch sử Giao dịch</a></li>
                <li><a href="/Favourite/Index"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z" /></svg> Đã lưu (Yêu thích)</a></li>
            </ul>

            <h3>Cài đặt Tài khoản</h3>
            <ul>
                <li><a href="/TaiKhoan/Profile"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" /><circle cx="12" cy="7" r="4" /></svg> Hồ sơ cá nhân</a></li>
                <li><a href="/TaiKhoan/EditProfile"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" /><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" /></svg> Cập nhật Hồ sơ</a></li>
                <li class="active"><a href="/TaiKhoan/ChangePassword"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2" /><path d="M7 11V7a5 5 0 0 1 10 0v4" /></svg> Đổi mật khẩu</a></li>
                <li><a href="/TaiKhoan/DeleteAccount"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6" /><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6" /><path d="M10 11v6" /><path d="M14 11v6" /><path d="M2 2v2h2l3 9v7H6a2 2 0 0 0 0 4h12a2 2 0 0 0 0-4h-1V12z" /></svg> Xóa tài khoản</a></li>
                <li class="logout"><a href="/TaiKhoan/Logout"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" /><polyline points="10 17 15 12 10 7" /><line x1="15" y1="12" x2="3" y2="12" /></svg> Đăng xuất</a></li>
            </ul>
        </aside>

        <section class="profile-content">
            <h2>@ViewBag.Title</h2>

            <div class="profile-card">
                <div class="profile-card-header" style="border-bottom: none; padding-bottom: 0;">
                    <h3>Thay đổi Mật khẩu Đăng nhập</h3>
                </div>

                @if (false)
                {
                    <div class="alert-message alert-message--success">
                        <span class="alert-message__title">Thông báo!</span>
                        <span class="alert-message__content">Mật khẩu của bạn đã được thay đổi thành công.</span>
                    </div>
                }

                <form method="post" action="/TaiKhoan/ChangePassword">
                    <div class="form-control">
                        <label for="OldPassword" class="form-label">Mật khẩu hiện tại</label>
                        <input type="password" id="OldPassword" name="OldPassword" class="form-control-input" placeholder="Nhập mật khẩu hiện tại" required />
                    </div>

                    <div class="form-control">
                        <label for="NewPassword" class="form-label">Mật khẩu mới</label>
                        <input type="password" id="NewPassword" name="NewPassword" class="form-control-input" placeholder="Nhập mật khẩu mới (ít nhất 6 ký tự)" required />
                        <span class="muted-text">Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường và số.</span>
                    </div>

                    <div class="form-control">
                        <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control-input" placeholder="Nhập lại mật khẩu mới" required />
                    </div>

                    <div class="form-actions" style="margin-top: 2rem;">
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 5px;"><rect x="3" y="11" width="18" height="11" rx="2" ry="2" /><path d="M7 11V7a5 5 0 0 1 9.9-1" /></svg>
                            Đặt lại Mật khẩu
                        </button>

                        <a href="/TaiKhoan/Profile" class="btn btn-secondary">
                            Hủy bỏ
                        </a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>