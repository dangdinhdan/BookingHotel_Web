@{
    ViewBag.Title = "Quên mật khẩu";
}

<div class="container">
    <div class="auth-box">
        <h2 class="auth-title">Khôi phục mật khẩu</h2>
        <p style="text-align:center; color:#666; font-size:14px; margin-bottom:20px;">
            Nhập Email và Số điện thoại đã đăng ký để đặt lại mật khẩu mới.
        </p>

        <form method="post" action="/TaiKhoan/ForgotPassword">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="email">Email đăng ký</label>
                <input type="email" id="email" name="email" class="form-input" placeholder="Nhập Email của bạn" required />
            </div>

            <div class="form-group">
                <label for="phone">Số điện thoại</label>
                <input type="text" id="phone" name="phone" class="form-input" placeholder="Nhập SĐT đã đăng ký" required />
            </div>

            <div class="form-group">
                <label for="newPassword">Mật khẩu mới</label>
                <input type="password" id="newPassword" name="newPassword" class="form-input" placeholder="Nhập mật khẩu mới" required />
            </div>

            <div class="form-group">
                <label for="confirmPassword">Xác nhận mật khẩu</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" placeholder="Nhập lại mật khẩu mới" required />
            </div>

            <button type="submit" class="btn-submit">Đổi mật khẩu</button>

            @if (ViewBag.Error != null)
            {
                <div class="alert-error" style="margin-top: 15px; color: red; background: #ffe6e6; padding: 10px; border-radius: 4px;">
                    @ViewBag.Error
                </div>
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:red; list-style:none; padding:0; margin-top:10px;" })

        </form>

        <div class="auth-footer">
            Nhớ mật khẩu rồi? <a href="/TaiKhoan/Login">Đăng nhập lại</a>
        </div>
    </div>
</div>