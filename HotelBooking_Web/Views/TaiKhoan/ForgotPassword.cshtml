@{
    ViewBag.Title = "Quên mật khẩu";
}

<div class="container">
    <div class="auth-box">
        <h2 class="auth-title">Khôi phục mật khẩu</h2>
        <p style="text-align:center; color:#666; font-size:14px; margin-bottom:20px;">
            Nhập Email của bạn để nhận mã xác nhận (OTP).
        </p>

        <form method="post" action="/TaiKhoan/ForgotPassword">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="email">Email đăng ký</label>
                <input type="email" id="email" name="email" class="form-input" placeholder="Nhập Email của bạn" required />
            </div>

            <button type="submit" class="btn-submit">Gửi mã xác nhận</button>

            @if (ViewBag.Error != null)
            {
                <div class="alert-error">@ViewBag.Error</div>
            }
        </form>

        <div class="auth-footer">
            <a href="/TaiKhoan/Login">Quay lại Đăng nhập</a>
        </div>
    </div>
</div>