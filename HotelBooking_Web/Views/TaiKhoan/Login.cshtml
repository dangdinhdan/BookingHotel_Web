@{
    ViewBag.Title = "Login";
}

<div class="auth-form-container">
    <h2>Đăng nhập</h2>

    <form method="post">
        <div class="form-control">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Ví dụ: khach@gmail.com" required />
        </div>

        <div class="form-control">
            <label for="password">Mật khẩu</label>
            <input type="password" id="password" name="password" placeholder="Ví dụ: 123456" required />
        </div>

        <button type="submit" class="btn btn-primary">Đăng nhập</button>

        @if (ViewBag.Error != null)
        {
            <p style="color:red; margin-top:10px;">@ViewBag.Error</p>
        }
    </form>

    <div class="switch-auth">
        Chưa có tài khoản?
        <a href="/TaiKhoan/Register">Đăng ký ngay</a>
    </div>
</div>