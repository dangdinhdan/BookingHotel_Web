@{
    ViewBag.Title = "Đăng ký thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 60px; padding-bottom: 80px; display: flex; justify-content: center;">

    <div class="auth-box" style="text-align: center; max-width: 500px; margin: 0 auto; padding: 40px;">

        <div style="margin-bottom: 20px; color: #28a745; display: flex; justify-content: center;">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
        </div>

        <h2 style="color: #28a745; margin-bottom: 15px; font-size: 28px; font-weight: 700;">Thành công!</h2>

        <p style="font-size: 16px; color: #555; line-height: 1.6; margin-bottom: 30px;">
            @ViewBag.Message
        </p>

        <div style="display: flex; justify-content: center; align-items: center;">

            <a href="/TaiKhoan/Login" class="btn btn-primary" style="padding: 12px 30px; text-decoration: none; margin-right: 15px; min-width: 160px;">
                Đăng nhập ngay
            </a>

            <a href="/Home/Index" class="btn btn-ghost" style="padding: 12px 30px; text-decoration: none; min-width: 160px;">
                Về trang chủ
            </a>

        </div>

    </div>
</div>