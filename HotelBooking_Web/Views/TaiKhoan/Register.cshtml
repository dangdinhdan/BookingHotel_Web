@model HotelBooking_Web.Models.TaiKhoanModel
@{
    ViewBag.Title = "Đăng ký";
}

<div class="container">
    <div class="auth-box">
        <h2 class="auth-title">Đăng ký</h2>

        @if (ViewBag.ValidationErrors != null)
        {
            <div class="alert-error" style="background: #f8d7da; color: #721c24; padding: 10px; border-radius: 4px; margin-bottom: 15px;">
                <strong>Lỗi Validation:</strong><br />
                @Html.Raw(ViewBag.ValidationErrors)
            </div>
        }

        @using (Html.BeginForm("Register", "TaiKhoan", FormMethod.Post, new { novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="FullName">Họ và Tên</label>
                @Html.TextBoxFor(m => m.HoTen, new
                {
                    @class = "form-input",
                    placeholder = "Nhập Họ và Tên của bạn",
                    id = "FullName"
                })
                @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger", style = "color:red; font-size: 13px;" })
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                @Html.TextBoxFor(m => m.Email, new
                {
                    @class = "form-input",
                    placeholder = "Nhập email",
                    id = "email",
                    type = "email"
                })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "color:red; font-size: 13px;" })
            </div>

            <div class="form-group">
                <label for="SoDienThoai">Số điện thoại</label>
                @Html.TextBoxFor(m => m.SoDienThoai, new
                {
                    @class = "form-input",
                    placeholder = "Nhập Số điện thoại",
                    id = "SoDienThoai",
                    type = "tel"
                })
                @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger", style = "color:red; font-size: 13px;" })
            </div>

            <div class="form-group">
                <label for="password">Mật khẩu</label>
                @Html.PasswordFor(m => m.MatKhau, new
                {
                    @class = "form-input",
                    placeholder = "Nhập mật khẩu",
                    id = "password"
                })
                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger", style = "color:red; font-size: 13px;" })
            </div>

            <div class="form-group">
                <label for="confirmPassword">Xác nhận mật khẩu</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new
                    {
                        @class = "form-input",
                        placeholder = "Nhập lại mật khẩu",
                        id = "ConfirmPassword"
                    })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger", style = "color:red; font-size: 13px;" })
            </div>

            <button type="submit" class="btn-submit">Đăng ký</button>

            if (TempData["msg"] != null)
            {
                <div class="alert-success">@TempData["msg"]</div>
            }
        }

        <div class="auth-footer">
            Đã có tài khoản? <a href="/TaiKhoan/Login">Đăng nhập ngay</a>
        </div>
    </div>
</div>