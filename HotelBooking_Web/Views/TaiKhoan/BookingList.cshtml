            CheckOut = "05/01/2026",
            Price = "5.000.000 VNĐ",
            Status = "Đã hủy",
            StatusClass = "status-cancelled"
        }
    };
}

<link href="~/Assets/client/css01/Duc.css" rel="stylesheet" />

<div class="container">
    <div class="profile-page">

        <aside class="profile-sidebar">
            <div class="profile-user-header">
                <div class="profile-avatar">
                    @(displayName.Length > 0 ? displayName.Substring(0, 1) : "U")
                </div>
                <div class="profile-user-info">
                    <h3>@displayName</h3>
                    <p title="@userEmail">@userEmail</p>
                </div>
            </div>

            <h3>Quản lý Đặt phòng</h3>
            <ul>
                <li class="active"><a href="/TaiKhoan/BookingList"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" /></svg> Đơn đặt phòng của tôi</a></li>
                <li><a href="/TaiKhoan/TransactionHistory"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2" /><line x1="16" y1="2" x2="16" y2="6" /><line x1="8" y1="2" x2="8" y2="6" /><line x1="3" y1="10" x2="21" y2="10" /></svg> Lịch sử Giao dịch</a></li>
                <li><a href="/Favourite/Index"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z" /></svg> Đã lưu</a></li>
            </ul>

            <h3>Cài đặt Tài khoản</h3>
            <ul>
                <li><a href="/TaiKhoan/Profile"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" /><circle cx="12" cy="7" r="4" /></svg> Hồ sơ cá nhân</a></li>
                <li><a href="/TaiKhoan/ChangePassword"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2" /><path d="M7 11V7a5 5 0 0 1 10 0v4" /></svg> Đổi mật khẩu</a></li>
                <li><a href="/TaiKhoan/DeleteAccount"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6" /><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6" /><path d="M10 11v6" /><path d="M14 11v6" /><path d="M2 2v2h2l3 9v7H6a2 2 0 0 0 0 4h12a2 2 0 0 0 0-4h-1V12z" /></svg> Xóa tài khoản</a></li>
                <li class="logout"><a href="/TaiKhoan/Logout"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" /><polyline points="10 17 15 12 10 7" /><line x1="15" y1="12" x2="3" y2="12" /></svg> Đăng xuất</a></li>
            </ul>
        </aside>

        <section class="profile-content">
            <h2 style="margin-bottom: 25px;">@ViewBag.Title</h2>

            <div class="booking-list">
                @foreach (var item in mockBookings)
                {
                    <div class="booking-card">
                        <img src="@item.Image" alt="@item.RoomName" class="booking-card-img" />

                        <div class="booking-card-body">
                            <div>
                                <div class="booking-header">
                                    <div>
                                        <a href="#" class="booking-room-name">@item.RoomName</a>
                                        <span class="booking-id">Mã đơn: @item.Id</span>
                                    </div>
                                    <div class="booking-price">@item.Price</div>
                                </div>

                                <div class="booking-dates">
                                    <div class="booking-date-item">
                                        <span>Nhận phòng</span>
                                        @item.CheckIn
                                    </div>
                                    <div class="booking-date-item">
                                        <span>Trả phòng</span>
                                        @item.CheckOut
                                    </div>
                                </div>
                            </div>

                            <div class="booking-footer">
                                <span class="status-badge @item.StatusClass">
                                    @* Icon chấm tròn nhỏ *@
                                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" viewBox="0 0 24 24" fill="currentColor"><circle cx="12" cy="12" r="12" /></svg>
                                    @item.Status
                                </span>

                                <a href="#" class="btn-ghost" style="padding: 8px 16px; font-size: 13px;">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </section>
    </div>
</div>