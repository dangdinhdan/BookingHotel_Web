@{
    ViewBag.Title = "Đơn đặt phòng của tôi";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
    ViewBag.ActivePage = "BookingList";

    var mockBookings = new List<dynamic>
{
        new {
            Id = "BK-2023001",
            RoomName = "Deluxe King Ocean View",
            Image = "https://images.unsplash.com/photo-1611892440504-42a792e24d32?auto=format&fit=crop&q=80&w=300&h=200",
            CheckIn = "25/11/2025",
            CheckOut = "28/11/2025",
            Price = "3.500.000 VNĐ",
            Status = "Thành công",
            StatusClass = "status-success"
        },
        new {
            Id = "BK-2023002",
            RoomName = "Superior Double Room",
            Image = "https://images.unsplash.com/photo-1590490360182-c33d57733427?auto=format&fit=crop&q=80&w=300&h=200",
            CheckIn = "10/12/2025",
            CheckOut = "12/12/2025",
            Price = "1.800.000 VNĐ",
            Status = "Đang chờ thanh toán",
            StatusClass = "status-pending"
        },
        new {
            Id = "BK-2023003",
            RoomName = "Family Suite Garden",
            Image = "https://images.unsplash.com/photo-1566665797739-1674de7a421a?auto=format&fit=crop&q=80&w=300&h=200",
            CheckIn = "01/01/2026",
            CheckOut = "05/01/2026",
            Price = "5.000.000 VNĐ",
            Status = "Đã hủy",
            StatusClass = "status-cancelled" 
        }

    };
}

<h2 style="margin-bottom: 25px;">@ViewBag.Title</h2>

<div class="booking-list">
    @if (mockBookings.Count > 0)
    {
        foreach (var item in mockBookings)
        {
            <div class="booking-card">
                <img src="@item.Image" alt="@item.RoomName" class="booking-card-img" />

                <div class="booking-card-body">
                    <div>
                        <div class="booking-header">
                            <div>
                                <a href="#" class="booking-room-name">@item.RoomName</a>
                                <div class="booking-id">Mã đơn hàng: #@item.Id</div>
                            </div>
                            <div class="booking-price">@item.Price</div>
                        </div>

                        <div class="booking-dates">
                            <div class="booking-date-item">
                                <span>Nhận phòng</span>
                                @item.CheckIn
                            </div>
                            <div class="booking-date-item">
                                <span>Trả phòng</span>
                                @item.CheckOut
                            </div>
                        </div>
                    </div>

                    <div class="booking-footer">
                        <span class="status-badge @item.StatusClass">
                            <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" viewBox="0 0 24 24" fill="currentColor"><circle cx="12" cy="12" r="12" /></svg>
                            @item.Status
                        </span>

                        <a href="#" class="btn-ghost" style="padding: 8px 16px; font-size: 13px;">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div style="text-align: center; padding: 40px; color: #888; background: #fff; border-radius: 12px; border: 1px solid #eee;">
            <p>Hiện tại bạn chưa có đơn đặt phòng nào.</p>
        </div>
    }
</div>