@model HotelBooking_Web.Areas.Admin.ViewModel.TaiKhoanViewModel
@{
    ViewBag.Title = "Them";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">Update</h3></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="~/admin/QLPhong">Danh sách Tài khoản</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa thông tin tài khoản</li>
                </ol>
            </div>
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row g-4">
            <!--begin::Col-->
            <div class="col-12">
                <!--begin::Quick Example-->
                <div class="card card-primary card-outline mb-4">
                    <!--begin::Header-->

                    <div class="card-header"><div class="card-title">Thông tin tài khoản</div></div>
                    <!--end::Header-->
                    <!--begin::Form-->
                    <form id="form-act">
                        <div class="card-body">
                            <input type="hidden" name="txt_TaiKhoanID" value="@Model.taikhoan.TaiKhoanID" />
                            <div class="col-md-12">
                                <label for="txt_HoTen" class="form-label">Họ tên</label>
                                <input class="form-control" type="text" id="txt_HoTen" name="txt_HoTen" value="@Model.taikhoan.HoTen" required>
                            </div>

                            <div class="col-md-12">
                                <label for="txt_Email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="txt_Email" name="txt_Email" value="@Model.taikhoan.Email" required>
                            </div>

                            <div class="mb-3">
                                <label for="txt_SoDienThoai" class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" id="txt_SoDienThoai" name="txt_SoDienThoai" value="@Model.taikhoan.SoDienThoai">
                            </div>
                            <div class="mb-3">
                                <label for="txt_DiaChi" class="form-label">Địa Chỉ</label>
                                <input type="text" class="form-control" id="txt_DiaChi" name="txt_DiaChi" value="@Model.taikhoan.DiaChi">
                            </div>


                            <div class="col-md-12">
                                <label for="slc_VaiTro" class="form-label">chọn vai trò</label>
                                <select id="slc_VaiTro" name="slc_VaiTro" class="form-control">
                                    <option value="@Model.taikhoan.VaiTro">@Model.taikhoan.VaiTro</option>
                                    @if (Model != null && Model.DSVT.Any())
                                    {

                                        foreach (var item in Model.DSVT)
                                        {
                                            <option value="@item.VaiTro">@item.VaiTro</option>

                                        }
                                    }
                                    else
                                    {
                                        <option value="@Model.taikhoan.VaiTro">@Model.taikhoan.VaiTro</option>
                                    }
                                </select>

                            </div>


                        </div>
                        
                        <!--end::Body-->
                        <!--begin::Footer-->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                        <!--end::Footer-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Quick Example-->
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>
<!--end::App Content-->

