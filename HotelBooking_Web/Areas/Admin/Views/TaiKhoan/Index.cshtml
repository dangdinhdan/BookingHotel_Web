<script>
    $(document).ready(function () {
        $('body').on('click', '.btnDelete', function () {
            var id = $(this).data("id")
            var conf = confirm("bạn có muốn xóa bản ghi này không?");
            if (conf == true) {
                $.ajax({
                    url: window.location.origin + '/Admin/TaiKhoan/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        var rs = JSON.parse(response);
                        if (rs.ErrCode == 1) {


                            window.location.href = window.location.origin + '/Admin/TaiKhoan'
                            alert(rs.ErrDesc);
                        }
                        else {

                            alert(rs.ErrDesc);
                        }

                    },
                    error: function (data) {
                        console.log(data);
                    }
                });
            }

        });
    });
</script>


